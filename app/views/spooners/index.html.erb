
<div class="container">
  <h1>Find a Spooner</h1>
  <%= link_to "Create a Spooner Profile", new_spooner_path %>
  <div class="row">
  <% @spooners.each do |spooner| %>
    <div class="col">
      <div class="card" style="width: 18rem;">
        <% if spooner.img.attached? %>
          <%= cl_image_tag spooner.img.first.key, height: 280, width: 280, crop: :fill %>
        <% else %>
          <%= image_tag "person-placeholder.jpg",  width: 280 , height: 280, crop: :fill %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= spooner.name %></h5>
          <p class="card-text"><%= spooner.spoon_type %></p>
          <p class="card-text">$<%= spooner.price %></p>
          <%= link_to "See Profile", spooner_path(spooner), class: "btn btn-light" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
