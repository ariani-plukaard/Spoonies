        <% else %>
          <%= image_tag "person-placeholder.jpg", width: 500 %>
        <% end %>
        </div>
        <div class="col-lg-6 p-4 m-10 justify-content-center">
          <div class="p-4" style="border-style:solid; border-radius: 16px;">
