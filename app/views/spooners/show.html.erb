    <div class="container">
    <div class="row">
        <div class="col-lg-6 p-4 justify-content-center">
        <% if @spooner.img.attached? %>
          <% @spooner.img.each do |photo| %>
            <div><%= cl_image_tag photo.key, height: 300, width: 500, crop: :fill, :style => "margin-bottom: 16px; border-radius: 16px" %></div>
