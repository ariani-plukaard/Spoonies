  <div class="d-flex p-2 justify-content-center">
    <h1><%= @spooner.name %></h1>
  </div>
    <div class="row">
      <div class="col-6">
        <%= image_tag "person-placeholder.jpg" %>
          <% @spooner.img.each do |photo| %>
          <%= cl_image_tag "person-placeholder.jpg", height: 300, width: 400, crop: :fill %>
          <% end %>
      </div>
      <div class="col-6">
        <h1>Booking Section Here</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-6 p-5">
        <h3>Age: <%= @spooner.age %> years</h3>
        <h3>Gender: <%= @spooner.gender %></h3>
        <h3>Prefers to be: <%= @spooner.spoon_type %></h3>
        <h3>Price: $<%= @spooner.price %></h3>
        <h3>Details: <%= @spooner.overview %></h3>
      </div>
      <div class="col-6 p-5">
        <p>Further info possible</p>
        <button type="button"><%= link_to "Edit Spooner", edit_spooner_path(@spooner) %>
        </button>
        <button type="button"> <%= link_to "Delete Spooner",
            spooner_path(@spooner),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
            %></button>
          <button type="button"> <%= link_to "Book Spooner", new_spooner_booking_path(@spooner)  %> </button>
      </div>
    </div>

<%# Reviews %>

<div class="container pb-5">
  <p><strong>Reviews</strong></p>
  <%= render "reviews/new", { spooner: @spooner, review: @review }  %>
  <% if @spooner.reviews.size > 0 %>
  <p><strong>Average rating:
    <%= (@spooner.reviews.reduce(0) { |sum, review| sum + review.rating }).fdiv(@spooner.reviews.size) %>
    <iconify-icon icon="material-symbols:star"></iconify-icon>
  </strong></p>
  <ul class="list-group">
    <% @spooner.reviews.each do |review| %>
      <% if review.content != "" %>
        <li class="list-group-item"><%= review.rating %> <iconify-icon icon="material-symbols:star"></iconify-icon>
        <small><%= link_to "[Delete]",
        review_path(review),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></small>
        </li>
        <li class="list-group-item mb-3"><em>"<%= review.content %>"</em></li>
      <% else %>
        <li class="list-group-item mb-3"><%= review.rating %> <iconify-icon icon="material-symbols:star"></iconify-icon>
        <small><%= link_to "[Delete]",
        review_path(review),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></small>
        </li>
      <% end %>
    <% end %>
  </ul>
  <br>
  <% end %>
</div>
